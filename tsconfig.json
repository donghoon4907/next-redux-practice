{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "paths": {
            "@components/*": ["./components/*"],
            "@layouts/*": ["./layouts/*"],
            "@interfaces/*": ["./interfaces/*"],
            "@styles/*": ["./styles/*"],
            "@assets/*": ["./public/assets/*"],
            "@actions/*": ["./actions/*"],
            "@reducers/*": ["./reducers/*"],
            "@sagas/*": ["./sagas/*"],
            "@services/*": ["./services/*"],
            "@hooks/*": ["./hooks/*"],
            "@utils/*": ["./utils/*"],
            "@models/*": ["./models/*"],
            "@store/*": ["./store/*"],
            "@constants/*": ["./constants/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
